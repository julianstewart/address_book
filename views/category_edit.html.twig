<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Rolodexterous || Category Edit || {{ category.getName }}</title>
    </head>
    <body>
        <div class="container">
            <h1>Update the {{ category.getName }} contact category</h1>

            <form action="/categories/{{ category.getId }}" method="post">
                <input name="_method" type="hidden" value="patch">

                <div class="form-group">
                    <label form="name">Rename your category:</label>
                    <input id="name" name="name" type="text">
                </div>

                <button class="btn btn-sm btn-primary" type="submit">Update</button>
            </form>

            <form action="/categories/{{ category.getId }}" method="post">
                <div class="form-group">
                    <input name="_method" type="hidden" value="delete">
                </div>

                <button class="btn btn-sm btn-primary" type="submit">Delete this category</button>
            </form>
        </div>
    </body>
</html>
